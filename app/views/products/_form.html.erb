<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :商品名稱 %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :商品敘述 %><br />
    <%= f.text_area :description, rows: 6%>
  </div>
  <div class="field">
    <%= f.label :數量 %><br />
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :價格 %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :圖片網址 %><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :時間 %><br />
    <%= f.datetime_select :date, :start_year => 2012  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
